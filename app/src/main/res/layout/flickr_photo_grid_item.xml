<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appCompat="http://schemas.android.com/tools">

    <data>
        <variable
            name="thumbnail"
            type="boolean" />
        <variable
            name="model"
            type="com.john.flickr.search.model.Photo" />
        <variable
            name="callback"
            type="com.john.flickr.search.view.PhotoGridItemListener" />
    </data>

    <com.john.flickr.SquareImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_description"
        android:scaleType="centerCrop"
        appCompat:thumbnail="@{thumbnail}"
        appCompat:url="@{model.partialUrl}" />

</layout>